
<h1>Listing Items</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Category</th>
      <th>Tags</th>
      <th>Total Servings</th>
      <th>Unit</th>
      <th>Weight</th>
      <th>Upc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.brand %></td>
        <td><%= item.name %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.category %></td>
        <td><%= item.tags.gsub('[','').gsub(']', '').gsub(/["]/, '') %></td>
        <td><%= item.total_servings %></td>
        <td><%= item.servings_unit %></td>
        <td><%= item.weight %></td>
        <td><%= item.upc %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center">
  <%= will_paginate @stores, renderer: BootstrapPagination::Rails %>
</div>
