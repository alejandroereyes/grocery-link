
<h2>Listing Items</h2>

<table class="table table-hover display" id='table_for_data'>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Category</th>
      <th>Tags</th>
      <th>Total Servings</th>
      <th>Unit</th>
      <th>Weight</th>
      <th>Upc</th>
      <th>Edit</th>
      <th>Remove</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.brand %></td>
        <td><a href=<%= "/items/#{item.id}" %>><%= item.name %></a></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.category %></td>
        <td><%= item.tags.join(', ') %></td>
        <td><%= item.total_servings %></td>
        <td><%= item.servings_unit %></td>
        <td><%= item.weight %></td>
        <td><%= item.upc %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center pagination">
  <%= will_paginate @stores, renderer: BootstrapPagination::Rails %>
</div>
